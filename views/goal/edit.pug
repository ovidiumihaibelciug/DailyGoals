extends ../layout

block content
  .main-goals.container
    form(method="POST", action="/goals/edit/" + goal._id)
      .form-group
        label Title
        input.form-control(type="text", name="title", value=goal.title)
      .form-group
        label Description
        textarea.form-control(name="description")= goal.description
      input.btn.btn-success(type="submit" name="submit" value="Submit")
