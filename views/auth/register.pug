extends ../layout

block content
  h1= title
  .box  
    form(method="POST", action="/register")
      .form-group
        label Username
        input.form-control(name="username", type="text")
      .form-group
        label Email
        input.form-control(name="email", type="email")
      .form-group
        label Password
        input.form-control(name="password", type="password")
      .form-group
        label Confirm password
        input.form-control(name="password2", type="password")
        input.btn.btn-success(name="submit", value="Submit", type="submit")
